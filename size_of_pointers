#include<stdio.h>
/*size of pointers may depend upon CPU architecture,compiler and OS. A 32-bit machine will have 4 bytes,a 64-bit machine running on 32-bit OS
will also have 4 bytes,64-bit machine-8bytes*/
void main()
{
	int *i1, **i2;
	char *c1, **c2;
	float *f1, **f2;
	printf("Size of integer pointer : %d\n",sizeof(i1));
	printf("Size of integer double pointer : %d\n",sizeof(i2));
	printf("Size of char pointer : %d\n",sizeof(c1));
	printf("Size of char double pointer : %d\n",sizeof(c2));
	printf("Size of float pointer : %d\n",sizeof(f1));
	printf("Size of float double pointer : %d",sizeof(f2));
}
